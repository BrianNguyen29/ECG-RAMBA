# ECG-RAMBA Backend Environment Configuration
# =============================================
# Copy this file to `.env` and fill in your values.

# SECURITY: Secret key for JWT tokens (REQUIRED for production)
# Generate a secure key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your_secret_key_here

# DATABASE (Optional, defaults to SQLite for local dev)
# DATABASE_URL=postgresql://user:pass@localhost/ecg_db

# CORS: Allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# MODELS: Set to 'true' to preload all AI models at startup
PRELOAD_MODELS=false

# =============================================================================
# DEEPTUTOR INTEGRATION (Phase 8)
# =============================================================================
# Get your API key from: https://aistudio.google.com/
GEMINI_API_KEY=your_gemini_api_key_here

# Debug mode (set to 'true' to see detailed errors in API responses)
DEBUG=false
